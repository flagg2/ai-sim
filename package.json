{
  "name": "turborepo-shadcn-ui",
  "version": "1.3.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "bunx --filter @repo/ui --bun shadcn-ui@latest add"
  },
  "dependencies": {
    "react-icons": "5.2.1",
    "react-hook-form": "7.52.2",
    "@hookform/resolvers": "3.9.0",
    "react-hot-toast": "2.4.1",
    "js-cookie": "3.0.5",
    "server-only": "0.0.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.3.2",
    "prettier-eslint": "16.3.0",
    "eslint": "9.10.0",
    "turbo": "2.0.6",
    "@types/js-cookie": "3.0.6"
  },
  "packageManager": "bun@1.1.21",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
